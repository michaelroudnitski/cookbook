<%= simple_form_for @category do |f| %>
<div class="field">
    <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
</div>
<!-- icon selection -->
<div class="field">
    <label class="label">Icon (select one)</label>
    <div class="level">
        <% @images.each do |iconImage| %>
        <%= render partial: "iconRadioBox", locals: {f: f, image: iconImage} %>
        <% end %>
    </div>
</div>

<br />

<%= f.button :submit, class: "button is-primary" %>
<% end %>